{
  "name": "@ukiyoue/core",
  "version": "0.1.0",
  "description": "Ukiyoue Framework - Core validation engines",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./schemas/*": "./schemas/*",
    "./semantics/*": "./semantics/*"
  },
  "files": [
    "dist",
    "schemas",
    "semantics"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm && bun run tsc --project tsconfig.build.json --emitDeclarationOnly",
    "prepack": "bun run build && bun run copy-schemas",
    "postpack": "bun run restore-symlinks",
    "copy-schemas": "rm -rf schemas semantics && cp -rL ../../schemas . && cp -rL ../../semantics .",
    "restore-symlinks": "rm -rf schemas semantics && ln -s ../../schemas . && ln -s ../../semantics .",
    "dev": "bun run src/index.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@rdfjs/data-model": "^2.1.1",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "clownface": "^2.0.3",
    "jsonld": "^8.3.3",
    "n3": "^1.26.0",
    "rdf-ext": "^2.6.0",
    "rdf-parse": "^4.0.0",
    "rdf-validate-shacl": "^0.6.5"
  },
  "devDependencies": {
    "@types/bun": "^1.3.1",
    "@types/jsonld": "^1.5.15",
    "@types/n3": "^1.26.1",
    "@types/node": "^24.9.2",
    "@types/rdf-js": "^4.0.2",
    "typescript": "^5.9.3"
  }
}
