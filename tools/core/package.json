{
  "name": "@ukiyoue/core",
  "version": "0.1.0",
  "description": "Ukiyoue Framework - Core validation engines",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./schemas/*": "./schemas/*",
    "./semantics/*": "./semantics/*"
  },
  "files": [
    "dist",
    "schemas",
    "semantics"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm && bun run tsc --emitDeclarationOnly",
    "dev": "bun run src/index.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1"
  },
  "devDependencies": {
    "@types/node": "^24.9.2",
    "typescript": "^5.9.3"
  }
}
