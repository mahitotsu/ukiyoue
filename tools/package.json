{
  "name": "@ukiyoue/validator",
  "version": "0.1.0",
  "description": "Validation tools for Ukiyoue framework",
  "type": "module",
  "bin": {
    "ukiyoue-validate": "./src/validate.ts"
  },
  "scripts": {
    "validate": "bun src/validate.ts",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:coverage:report": "bun test --coverage --coverage-reporter=lcov --coverage-reporter=text",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{ts,json,md}\" --ignore-path .prettierignore",
    "typecheck": "tsc --noEmit",
    "check": "bun run typecheck && bun run lint && bun run format:check && bun run test"
  },
  "dependencies": {
    "@ukiyoue/schemas": "file:../schemas",
    "@ukiyoue/semantics": "file:../semantics",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "chalk": "^5.3.0",
    "jsonld": "^8.3.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/bun": "latest",
    "@types/jsonld": "^1.5.15",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "typescript-eslint": "^8.46.2"
  }
}
