{
  "name": "@ukiyoue/tools",
  "version": "0.1.0",
  "description": "CLI tools for Ukiyoue framework - validation, link checking, and document processing",
  "type": "module",
  "bin": {
    "ukiyoue": "./dist/cli.js"
  },
  "scripts": {
    "build": "bun build src/cli.ts --outdir dist --target bun",
    "dev": "bun run src/cli.ts",
    "validate": "bun run src/commands/validate.ts",
    "check-links": "bun run src/commands/check-links.ts"
  },
  "keywords": [
    "ukiyoue",
    "validation",
    "json-schema",
    "json-ld",
    "documentation"
  ],
  "author": "mahitotsu",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "chalk": "^5.3.0",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.6.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
