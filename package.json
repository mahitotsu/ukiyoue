{
  "name": "ukiyoue",
  "version": "0.1.0",
  "description": "AI-era documentation framework with conversational, auto-generatable, and reusable capabilities",
  "type": "module",
  "keywords": [
    "documentation",
    "json-schema",
    "json-ld",
    "semantic-web",
    "business-requirements"
  ],
  "author": "mahitotsu",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.{json,jsonld,md,ts,tsx}\"",
    "format:check": "prettier --check \"**/*.{json,jsonld,md,ts,tsx}\"",
    "format:json": "prettier --write \"**/*.{json,jsonld}\"",
    "format:docs": "prettier --write \"**/*.md\"",
    "lint:md": "markdownlint-cli2 \"**/*.md\"",
    "lint:md:fix": "markdownlint-cli2 --fix \"**/*.md\"",
    "validate": "cd tools && bun run src/cli.ts validate",
    "check-links": "cd tools && bun run src/cli.ts check-links",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "markdownlint-cli2": "^0.18.1",
    "markdownlint-cli2-formatter-pretty": "^0.0.8",
    "prettier": "^3.3.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "lint-staged": {
    "*.{json,jsonld}": "prettier --write",
    "*.md": [
      "markdownlint-cli2 --fix",
      "prettier --write"
    ],
    "tools/**/*.ts": [
      "bash -c 'cd tools && bun run lint:fix'",
      "prettier --write"
    ]
  }
}
