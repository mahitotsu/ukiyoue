{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ukiyoue.example.org/schemas/layer1/project-charter.json",
  "title": "Project Charter",
  "description": "プロジェクト憲章（PM-CHARTER）: プロジェクトの正当性と承認を得るための文書",
  "allOf": [{ "$ref": "../_common.json#/definitions/baseArtifact" }],
  "type": "object",
  "required": ["title", "background", "scope", "stakeholders"],
  "properties": {
    "@type": {
      "const": "ProjectCharter"
    },
    "title": {
      "type": "string",
      "description": "プロジェクトタイトル",
      "minLength": 1
    },
    "background": {
      "type": "object",
      "description": "プロジェクトの背景",
      "required": ["problem", "opportunity"],
      "properties": {
        "problem": {
          "type": "string",
          "description": "解決すべき課題"
        },
        "opportunity": {
          "type": "string",
          "description": "ビジネス機会"
        },
        "currentState": {
          "type": "string",
          "description": "現状（As-Is）"
        },
        "desiredState": {
          "type": "string",
          "description": "目指す姿（To-Be）"
        }
      }
    },
    "stakeholders": {
      "type": "object",
      "description": "ステークホルダー",
      "required": ["sponsor", "projectManager"],
      "properties": {
        "sponsor": {
          "type": "object",
          "description": "スポンサー（プロジェクト承認者）",
          "required": ["name"],
          "properties": {
            "name": { "type": "string" },
            "role": { "type": "string" },
            "organization": { "type": "string" }
          }
        },
        "projectManager": {
          "type": "object",
          "description": "プロジェクトマネージャー",
          "required": ["name"],
          "properties": {
            "name": { "type": "string" },
            "role": { "type": "string" }
          }
        },
        "keyStakeholders": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": { "type": "string" },
              "role": { "type": "string" },
              "interest": { "type": "string", "description": "利害関係" }
            }
          },
          "description": "主要なステークホルダー"
        }
      }
    },
    "scope": {
      "type": "object",
      "description": "スコープ定義",
      "required": ["inScope"],
      "properties": {
        "inScope": {
          "type": "array",
          "items": { "type": "string" },
          "description": "スコープ内の項目（何をするか）",
          "minItems": 1
        },
        "outOfScope": {
          "type": "array",
          "items": { "type": "string" },
          "description": "スコープ外の項目（何をしないか）"
        }
      }
    },
    "milestones": {
      "type": "array",
      "description": "主要マイルストーン（ハイレベル）",
      "items": {
        "type": "object",
        "required": ["name", "targetDate"],
        "properties": {
          "name": {
            "type": "string",
            "description": "マイルストーン名"
          },
          "targetDate": {
            "type": "string",
            "format": "date",
            "description": "目標日"
          },
          "deliverables": {
            "type": "array",
            "items": { "type": "string" },
            "description": "このマイルストーンで完成する主要成果物"
          }
        }
      }
    },
    "constraints": {
      "type": "object",
      "description": "制約条件",
      "properties": {
        "budget": {
          "type": "object",
          "properties": {
            "amount": { "type": "number" },
            "currency": { "type": "string", "default": "JPY" },
            "description": { "type": "string" }
          }
        },
        "resources": {
          "type": "string",
          "description": "リソース制約（人員、設備等）"
        },
        "timeline": {
          "$ref": "../_common.json#/definitions/dateRange",
          "description": "プロジェクト期間"
        }
      }
    }
  }
}
