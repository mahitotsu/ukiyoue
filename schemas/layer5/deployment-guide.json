{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ukiyoue.example.org/schemas/layer5/deployment-guide.json",
  "title": "Deployment Guide",
  "description": "デプロイガイド（OPS-DEPLOY）: システムのデプロイ手順を明確化",
  "allOf": [{ "$ref": "../_common.json#/definitions/baseArtifact" }],
  "type": "object",
  "required": ["title", "deploymentProcedure"],
  "properties": {
    "@type": {
      "const": "DeploymentGuide"
    },
    "title": {
      "type": "string",
      "description": "デプロイガイドのタイトル",
      "minLength": 1
    },
    "environmentSetup": {
      "type": "string",
      "description": "環境構築手順: 新規環境のセットアップ、前提条件"
    },
    "deploymentProcedure": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["step", "action"],
        "properties": {
          "step": { "type": "integer" },
          "action": { "type": "string" },
          "details": { "type": "string" }
        }
      },
      "description": "ステップバイステップのデプロイ作業",
      "minItems": 1
    },
    "configurationItems": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "item": { "type": "string" },
          "description": { "type": "string" },
          "example": { "type": "string" }
        }
      },
      "description": "設定項目: 環境変数、設定ファイル、パラメータ"
    },
    "verificationProcedure": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "check": { "type": "string" },
          "expectedResult": { "type": "string" }
        }
      },
      "description": "検証手順: デプロイ後の動作確認、ヘルスチェック"
    },
    "rollbackProcedure": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "step": { "type": "integer" },
          "action": { "type": "string" }
        }
      },
      "description": "ロールバック手順: 問題発生時の切り戻し方法"
    },
    "deploymentChecklist": {
      "type": "object",
      "properties": {
        "preDeployment": {
          "type": "array",
          "items": { "type": "string" },
          "description": "作業前確認事項"
        },
        "postDeployment": {
          "type": "array",
          "items": { "type": "string" },
          "description": "作業後確認事項"
        }
      }
    }
  },
  "additionalProperties": false
}
