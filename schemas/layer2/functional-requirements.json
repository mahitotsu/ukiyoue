{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ukiyoue.example.org/schemas/layer2/functional-requirements.json",
  "title": "Functional Requirements",
  "description": "機能要求仕様（FUNC-REQ）: システムの機能に関する要求事項",
  "allOf": [{ "$ref": "../_common.json#/definitions/baseArtifact" }],
  "type": "object",
  "required": ["title", "requirements"],
  "properties": {
    "@type": {
      "const": "FunctionalRequirements"
    },
    "title": {
      "type": "string",
      "description": "機能要求仕様のタイトル",
      "minLength": 1
    },
    "requirements": {
      "type": "array",
      "description": "機能要求",
      "items": {
        "type": "object",
        "required": ["id", "description", "category"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^FR-[A-Z]+-[0-9]{3}$",
            "description": "機能要求ID（例: FR-CONV-001, FR-AUTO-001）"
          },
          "description": {
            "type": "string",
            "description": "要求の説明"
          },
          "category": {
            "type": "string",
            "description": "要求カテゴリ（例: CONV, AUTO, REUSE）"
          },
          "priority": {
            "type": "string",
            "enum": ["must", "should", "could", "wont"],
            "description": "MoSCoW優先度"
          },
          "rationale": {
            "type": "string",
            "description": "要求の理由・背景"
          },
          "acceptanceCriteria": {
            "type": "array",
            "items": { "type": "string" },
            "description": "受入基準",
            "minItems": 1
          },
          "userStory": {
            "type": "object",
            "description": "ユーザーストーリー形式の記述",
            "properties": {
              "asA": { "type": "string", "description": "ユーザーロール" },
              "iWant": { "type": "string", "description": "やりたいこと" },
              "soThat": { "type": "string", "description": "目的・理由" }
            }
          },
          "functionalDetails": {
            "type": "object",
            "description": "機能詳細",
            "properties": {
              "inputs": {
                "type": "array",
                "items": { "type": "string" },
                "description": "入力データ"
              },
              "processing": {
                "type": "string",
                "description": "処理内容"
              },
              "outputs": {
                "type": "array",
                "items": { "type": "string" },
                "description": "出力データ"
              }
            }
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^FR-[A-Z]+-[0-9]{3}$"
            },
            "description": "依存する他の機能要求ID"
          },
          "relatedBusinessRequirements": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^BR-[0-9]{3}$"
            },
            "description": "関連するビジネス要求ID"
          }
        }
      },
      "minItems": 1
    },
    "useCases": {
      "type": "array",
      "description": "ユースケース",
      "items": {
        "type": "object",
        "required": ["id", "name", "actors"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^UC-[0-9]{3}$",
            "description": "ユースケースID（例: UC-001）"
          },
          "name": {
            "type": "string",
            "description": "ユースケース名"
          },
          "actors": {
            "type": "array",
            "items": { "type": "string" },
            "description": "アクター（ユーザーロール）",
            "minItems": 1
          },
          "description": {
            "type": "string",
            "description": "ユースケースの説明"
          },
          "preconditions": {
            "type": "array",
            "items": { "type": "string" },
            "description": "事前条件"
          },
          "mainFlow": {
            "type": "array",
            "items": { "type": "string" },
            "description": "メインフロー（基本シナリオ）"
          },
          "alternativeFlows": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "steps": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              }
            },
            "description": "代替フロー"
          },
          "postconditions": {
            "type": "array",
            "items": { "type": "string" },
            "description": "事後条件"
          },
          "relatedRequirements": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^FR-[A-Z]+-[0-9]{3}$"
            },
            "description": "関連する機能要求ID"
          }
        }
      }
    }
  },
  "additionalProperties": false
}
