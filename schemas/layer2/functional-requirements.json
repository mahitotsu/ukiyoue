{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ukiyoue.example.org/schemas/layer2/functional-requirements.json",
  "title": "Functional Requirements",
  "description": "機能要求仕様（FUNC-REQ）: システムの機能に関する要求事項",
  "allOf": [{ "$ref": "../_common.json#/definitions/baseArtifact" }],
  "type": "object",
  "required": ["title", "requirements"],
  "properties": {
    "@type": {
      "const": "FunctionalRequirements"
    },
    "title": {
      "type": "string",
      "description": "機能要求仕様のタイトル",
      "minLength": 1
    },
    "requirements": {
      "type": "array",
      "description": "機能要求",
      "items": {
        "type": "object",
        "required": ["id", "description", "category"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^FR-[A-Z]+-[0-9]{3}$",
            "description": "機能要求ID（例: FR-CONV-001, FR-AUTO-001）"
          },
          "description": {
            "type": "string",
            "description": "要求の説明"
          },
          "category": {
            "type": "string",
            "description": "要求カテゴリ（例: CONV, AUTO, REUSE）"
          },
          "priority": {
            "type": "string",
            "enum": ["must", "should", "could", "wont"],
            "description": "MoSCoW優先度"
          },
          "rationale": {
            "type": "string",
            "description": "要求の理由・背景"
          },
          "acceptanceCriteria": {
            "type": "array",
            "items": { "type": "string" },
            "description": "受入基準",
            "minItems": 1
          },
          "relatedUserStories": {
            "type": "array",
            "items": { "type": "string" },
            "description": "関連するユーザーストーリーID（Layer 1のuser-storyへの参照）"
          },
          "functionalDetails": {
            "type": "object",
            "description": "機能詳細",
            "properties": {
              "inputs": {
                "type": "array",
                "items": { "type": "string" },
                "description": "入力データ"
              },
              "processing": {
                "type": "string",
                "description": "処理内容"
              },
              "outputs": {
                "type": "array",
                "items": { "type": "string" },
                "description": "出力データ"
              }
            }
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^FR-[A-Z]+-[0-9]{3}$"
            },
            "description": "依存する他の機能要求ID"
          },
          "relatedBusinessRequirements": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^BR-[0-9]{3}$"
            },
            "description": "関連するビジネス要求ID"
          }
        }
      },
      "minItems": 1
    },
    "relatedUseCases": {
      "type": "array",
      "description": "関連するユースケース（Layer 2のuse-caseへの参照）",
      "items": {
        "type": "string",
        "pattern": "^UC-[A-Z]+-[0-9]{3}$"
      }
    }
  }
}
