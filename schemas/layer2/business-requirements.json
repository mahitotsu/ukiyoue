{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ukiyoue.example.org/schemas/layer2/business-requirements.json",
  "title": "Business Requirements",
  "description": "ビジネス要求仕様（BIZ-REQ）: ビジネス視点の要求事項",
  "allOf": [{ "$ref": "../_common.json#/definitions/baseArtifact" }],
  "type": "object",
  "required": ["title", "requirements"],
  "properties": {
    "@type": {
      "const": "BusinessRequirements"
    },
    "title": {
      "type": "string",
      "description": "ビジネス要求仕様のタイトル",
      "minLength": 1
    },
    "requirements": {
      "type": "array",
      "description": "ビジネス要求",
      "items": {
        "type": "object",
        "required": ["id", "description"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^BR-[0-9]{3}$",
            "description": "ビジネス要求ID（例: BR-001）"
          },
          "description": {
            "type": "string",
            "description": "要求の説明"
          },
          "relatedBusinessGoals": {
            "type": "array",
            "items": { "type": "string" },
            "description": "関連するビジネス目標ID（Layer 1のbusiness-goalへの参照）"
          },
          "priority": {
            "type": "string",
            "enum": ["must", "should", "could", "wont"],
            "description": "MoSCoW優先度"
          },
          "rationale": {
            "type": "string",
            "description": "要求の理由・背景"
          },
          "acceptanceCriteria": {
            "type": "array",
            "items": { "type": "string" },
            "description": "受入基準"
          },
          "constraints": {
            "type": "array",
            "items": { "type": "string" },
            "description": "制約条件"
          }
        }
      },
      "minItems": 1
    },
    "stakeholderNeeds": {
      "type": "array",
      "description": "ステークホルダーニーズ",
      "items": {
        "type": "object",
        "required": ["stakeholder", "needs"],
        "properties": {
          "stakeholder": {
            "type": "string",
            "description": "ステークホルダー名またはロール"
          },
          "needs": {
            "type": "array",
            "items": { "type": "string" },
            "description": "ニーズのリスト"
          },
          "relatedRequirements": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^BR-[0-9]{3}$"
            },
            "description": "関連する要求ID"
          }
        }
      }
    }
  }
}
