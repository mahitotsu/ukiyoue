{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ukiyoue.example.org/schemas/layer2/non-functional-requirements.json",
  "title": "Non-Functional Requirements",
  "description": "非機能要求仕様（NFR）: システムの品質特性に関する要求事項",
  "allOf": [{ "$ref": "../_common.json#/definitions/baseArtifact" }],
  "type": "object",
  "required": ["title", "requirements"],
  "properties": {
    "@type": {
      "const": "NonFunctionalRequirements"
    },
    "title": {
      "type": "string",
      "description": "非機能要求仕様のタイトル",
      "minLength": 1
    },
    "requirements": {
      "type": "array",
      "description": "非機能要求",
      "items": {
        "type": "object",
        "required": ["id", "category", "description"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^NFR-[A-Z]+-[0-9]{3}$",
            "description": "非機能要求ID（例: NFR-PERF-001, NFR-SEC-001）"
          },
          "category": {
            "type": "string",
            "enum": [
              "performance",
              "scalability",
              "availability",
              "reliability",
              "security",
              "usability",
              "maintainability",
              "portability",
              "compatibility",
              "compliance"
            ],
            "description": "非機能カテゴリ（ISO 25010品質特性）"
          },
          "description": {
            "type": "string",
            "description": "要求の説明"
          },
          "priority": {
            "type": "string",
            "enum": ["must", "should", "could", "wont"],
            "description": "MoSCoW優先度"
          },
          "metric": {
            "type": "object",
            "description": "測定可能な基準",
            "properties": {
              "name": { "type": "string", "description": "メトリクス名" },
              "target": { "type": "string", "description": "目標値" },
              "threshold": { "type": "string", "description": "許容閾値" },
              "unit": { "type": "string", "description": "単位" }
            }
          },
          "rationale": {
            "type": "string",
            "description": "要求の理由・背景"
          },
          "verificationMethod": {
            "type": "string",
            "enum": ["test", "analysis", "inspection", "demonstration"],
            "description": "検証方法"
          },
          "constraints": {
            "type": "array",
            "items": { "type": "string" },
            "description": "制約条件"
          },
          "relatedFunctionalRequirements": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^FR-[A-Z]+-[0-9]{3}$"
            },
            "description": "関連する機能要求ID"
          }
        }
      },
      "minItems": 1
    },
    "qualityAttributes": {
      "type": "object",
      "description": "品質属性の全体的な目標",
      "properties": {
        "performance": {
          "type": "object",
          "properties": {
            "responseTime": { "type": "string" },
            "throughput": { "type": "string" },
            "resourceUtilization": { "type": "string" }
          }
        },
        "scalability": {
          "type": "object",
          "properties": {
            "userLoad": { "type": "string" },
            "dataVolume": { "type": "string" },
            "horizontalScaling": { "type": "string" }
          }
        },
        "availability": {
          "type": "object",
          "properties": {
            "uptime": { "type": "string" },
            "mtbf": { "type": "string", "description": "Mean Time Between Failures" },
            "mttr": { "type": "string", "description": "Mean Time To Repair" }
          }
        },
        "security": {
          "type": "object",
          "properties": {
            "authentication": { "type": "string" },
            "authorization": { "type": "string" },
            "dataProtection": { "type": "string" },
            "compliance": {
              "type": "array",
              "items": { "type": "string" },
              "description": "準拠する規格・法規制"
            }
          }
        }
      }
    }
  },
  "additionalProperties": false
}
