{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ukiyoue.example.org/schemas/layer3/runtime-architecture.json",
  "title": "Runtime Architecture",
  "description": "実行時アーキテクチャ（ARCH-RUNTIME）: システムが実行時にどう動作するかの全体構造",
  "allOf": [{ "$ref": "../_common.json#/definitions/baseArtifact" }],
  "type": "object",
  "required": ["title", "overview", "components"],
  "properties": {
    "@type": {
      "const": "RuntimeArchitecture"
    },
    "title": {
      "type": "string",
      "description": "実行時アーキテクチャのタイトル",
      "minLength": 1
    },
    "overview": {
      "type": "string",
      "description": "システム全体の概要"
    },
    "systemConfiguration": {
      "type": "string",
      "description": "システム構成図の説明"
    },
    "componentComposition": {
      "type": "string",
      "description": "コンポーネント構成（マイクロサービス/モノリス、フロントエンド/バックエンド）"
    },
    "components": {
      "type": "array",
      "description": "システムコンポーネント",
      "items": {
        "type": "object",
        "required": ["id", "name", "type"],
        "properties": {
          "id": { "type": "string", "pattern": "^COMP-[0-9]{3}$" },
          "name": { "type": "string" },
          "type": { "type": "string", "description": "コンポーネントタイプ" },
          "description": { "type": "string" },
          "technology": { "type": "string", "description": "使用技術" },
          "dependencies": {
            "type": "array",
            "items": { "type": "string", "pattern": "^COMP-[0-9]{3}$" },
            "description": "依存コンポーネント"
          }
        }
      },
      "minItems": 1
    },
    "communicationMethods": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string", "description": "同期/非同期、REST/gRPC/メッセージング" },
          "description": { "type": "string" },
          "useCases": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      },
      "description": "通信方式"
    },
    "technologyStack": {
      "type": "object",
      "description": "技術スタック",
      "properties": {
        "languages": {
          "type": "array",
          "items": { "type": "string" }
        },
        "frameworks": {
          "type": "array",
          "items": { "type": "string" }
        },
        "middleware": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "dataFlow": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "description": {
            "type": "string",
            "description": "リクエスト処理の流れ、イベントフロー"
          },
          "steps": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      },
      "description": "データフロー"
    },
    "integrationPoints": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string", "description": "外部API、SaaS、レガシーシステム" },
          "description": { "type": "string" }
        }
      },
      "description": "統合ポイント"
    }
  },
  "additionalProperties": false
}
