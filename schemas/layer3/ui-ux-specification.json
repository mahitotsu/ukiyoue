{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ukiyoue.example.org/schemas/layer3/ui-ux-specification.json",
  "title": "UI/UX Specification",
  "description": "UI/UX仕様（ARCH-UI）: ユーザーインターフェースとユーザー体験を詳細に設計",
  "allOf": [{ "$ref": "../_common.json#/definitions/baseArtifact" }],
  "type": "object",
  "required": ["title", "screens"],
  "properties": {
    "@type": {
      "const": "UiUxSpecification"
    },
    "title": {
      "type": "string",
      "description": "UI/UX仕様のタイトル",
      "minLength": 1
    },
    "overview": {
      "type": "string",
      "description": "UI/UXの概要"
    },
    "screenTransitions": {
      "type": "string",
      "description": "画面遷移図の説明"
    },
    "screens": {
      "type": "array",
      "description": "画面定義",
      "items": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^SCR-[0-9]{3}$",
            "description": "画面ID"
          },
          "name": { "type": "string" },
          "wireframe": {
            "type": "string",
            "description": "ワイヤーフレーム（画面レイアウト、要素配置）"
          },
          "layout": { "type": "string", "description": "レイアウト説明" },
          "interactions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "element": { "type": "string" },
                "action": {
                  "type": "string",
                  "description": "ボタン動作、フォーム検証、エラー表示"
                },
                "behavior": { "type": "string" }
              }
            },
            "description": "インタラクションデザイン"
          },
          "transitions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "trigger": { "type": "string" },
                "target": { "type": "string", "pattern": "^SCR-[0-9]{3}$" },
                "condition": { "type": "string" }
              }
            },
            "description": "画面遷移"
          },
          "responsiveDesign": {
            "type": "object",
            "properties": {
              "desktop": { "type": "string" },
              "tablet": { "type": "string" },
              "mobile": { "type": "string" }
            },
            "description": "レスポンシブデザイン"
          }
        }
      },
      "minItems": 1
    },
    "designGuidelines": {
      "type": "object",
      "properties": {
        "colorPalette": {
          "type": "array",
          "items": { "type": "string" }
        },
        "typography": { "type": "string" },
        "components": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "description": { "type": "string" },
              "usage": { "type": "string" }
            }
          }
        }
      },
      "description": "デザインガイドライン"
    },
    "accessibility": {
      "type": "object",
      "properties": {
        "wcagLevel": { "type": "string", "description": "WCAG準拠レベル" },
        "screenReader": { "type": "string", "description": "スクリーンリーダー対応" },
        "keyboardNavigation": { "type": "string" },
        "contrastRatio": { "type": "string" }
      },
      "description": "アクセシビリティ"
    }
  },
  "additionalProperties": false
}
