{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ukiyoue.example.org/schemas/layer3/security-architecture.json",
  "title": "Security Architecture",
  "description": "セキュリティアーキテクチャ（ARCH-SECURITY）: システム全体のセキュリティ対策を体系的に設計",
  "allOf": [{ "$ref": "../_common.json#/definitions/baseArtifact" }],
  "type": "object",
  "required": ["title", "authenticationMethods", "authorizationMethods"],
  "properties": {
    "@type": {
      "const": "SecurityArchitecture"
    },
    "title": {
      "type": "string",
      "description": "セキュリティアーキテクチャのタイトル",
      "minLength": 1
    },
    "overview": {
      "type": "string",
      "description": "セキュリティアーキテクチャの概要"
    },
    "authenticationMethods": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "method": { "type": "string", "description": "パスワード、MFA、SSO、生体認証" },
          "description": { "type": "string" },
          "implementation": { "type": "string" }
        }
      },
      "description": "認証方式",
      "minItems": 1
    },
    "authorizationMethods": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "model": { "type": "string", "description": "RBAC、ABAC" },
          "description": { "type": "string" },
          "implementation": { "type": "string" }
        }
      },
      "description": "認可方式",
      "minItems": 1
    },
    "encryptionPolicy": {
      "type": "object",
      "properties": {
        "dataAtRest": { "type": "string", "description": "保存時の暗号化" },
        "dataInTransit": { "type": "string", "description": "転送時の暗号化" },
        "keyManagement": { "type": "string", "description": "鍵管理" }
      },
      "description": "暗号化方針"
    },
    "vulnerabilityMitigation": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "vulnerability": {
            "type": "string",
            "description": "OWASP Top 10対策、SQLインジェクション、XSS、CSRF"
          },
          "mitigation": { "type": "string" }
        }
      },
      "description": "脆弱性対策"
    },
    "secureCoding": {
      "type": "object",
      "properties": {
        "inputValidation": { "type": "string" },
        "escaping": { "type": "string" },
        "secureApiUsage": { "type": "string" }
      },
      "description": "セキュアコーディング"
    },
    "auditLogging": {
      "type": "object",
      "properties": {
        "accessLogs": { "type": "string" },
        "operationLogs": { "type": "string" },
        "auditTrail": { "type": "string" }
      },
      "description": "監査ログ"
    },
    "threatModeling": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "attackScenario": { "type": "string" },
          "riskAssessment": { "type": "string" },
          "mitigation": { "type": "string" }
        }
      },
      "description": "脅威モデリング"
    }
  },
  "additionalProperties": false
}
