{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ukiyoue.example.org/schemas/layer4/api-specification.json",
  "title": "API Specification",
  "description": "API仕様書（IMPL-API）: 実装可能な詳細API仕様を機械可読形式で定義（OpenAPI/Swagger）",
  "allOf": [{ "$ref": "../_common.json#/definitions/baseArtifact" }],
  "type": "object",
  "required": ["title", "endpoints"],
  "properties": {
    "@type": {
      "const": "ApiSpecification"
    },
    "title": {
      "type": "string",
      "description": "API仕様のタイトル",
      "minLength": 1
    },
    "overview": {
      "type": "string",
      "description": "API の概要"
    },
    "baseUrl": {
      "type": "string",
      "description": "ベースURL"
    },
    "authentication": {
      "type": "string",
      "description": "認証・認可（API キー、OAuth、JWT トークン）"
    },
    "endpoints": {
      "type": "array",
      "description": "エンドポイント一覧",
      "items": {
        "type": "object",
        "required": ["path", "method", "summary"],
        "properties": {
          "path": { "type": "string", "description": "URLパス" },
          "method": { "type": "string", "enum": ["GET", "POST", "PUT", "DELETE", "PATCH"] },
          "summary": { "type": "string", "description": "概要" },
          "description": { "type": "string" },
          "parameters": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "in": { "type": "string", "enum": ["path", "query", "header", "body"] },
                "type": { "type": "string" },
                "termReference": {
                  "type": "string",
                  "pattern": "^TERM-[A-Z]+-[0-9]{3}$",
                  "description": "Data Dictionary の用語IDへの参照（推奨、ADR-009）"
                },
                "required": { "type": "boolean" },
                "description": { "type": "string" }
              }
            },
            "description": "リクエストパラメータ"
          },
          "requestBody": {
            "type": "object",
            "properties": {
              "contentType": { "type": "string" },
              "schema": { "type": "string", "description": "リクエストボディスキーマ" },
              "example": { "type": "string" }
            },
            "description": "リクエストボディ"
          },
          "responses": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "statusCode": { "type": "integer" },
                "description": { "type": "string" },
                "schema": { "type": "string", "description": "レスポンススキーマ" },
                "example": { "type": "string" }
              }
            },
            "description": "レスポンス仕様"
          },
          "errorHandling": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "errorCode": { "type": "string" },
                "message": { "type": "string" },
                "httpStatus": { "type": "integer" }
              }
            },
            "description": "エラーハンドリング"
          }
        }
      },
      "minItems": 1
    },
    "rateLimiting": {
      "type": "object",
      "properties": {
        "limit": { "type": "string" },
        "window": { "type": "string" }
      },
      "description": "レート制限"
    },
    "versioning": {
      "type": "string",
      "description": "APIバージョン管理戦略"
    }
  }
}
